;; square-a-number: number -> number

(define (square x)
  (expt x 2))

(square 8)

;; sine-of-an-angle: number -> number

(sin 0)

;; maximum: x numbers -> number

(max 1 29 83 0129 92 83)

;; evaluating square roots

(sqrt 4)
(sqrt 2)
(sqrt -1)

;; tangent of an angle

(tan 8)